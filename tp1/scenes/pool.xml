<sxs>
    <scene root="demoRoot" axis_length="17"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.53" g="0.81" b="0.92" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="waterTexture" file="scenes/images/waterTex.jpg" />
        <texture id="grassTexture" file="scenes/images/grassTex.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="light_cyan" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.88" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.88" g="1.0" b="1.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="grass" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.49" g="0.78" b="0.31" a="1.0" />
            <diffuse r="0.49" g="0.78" b="0.31" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="blue" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0" g="0" b="1.0" a="1.0" />
            <diffuse r="0" g="0" b="1.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="red" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="0" b="0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="wood" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.92" g="0.83" b="0.65" a="1.0" />
            <diffuse r="0.92" g="0.83" b="0.65" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="black" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0" g="0" b="0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="white" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="light_gray" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.83" g="0.83" b="0.83" a="1.0" />
            <diffuse r="0.83" g="0.83" b="0.83" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="water" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.15" g="0.4" b="0.56" a="1.0" />
            <diffuse r="0.15" g="0.4" b="0.56" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="1" y="1" z="1" />
        </transformation>

        <transformation id="grassTransform">
                <rotate axis="x" angle="-90" />
                <scale x="17" y="8.5" z="1" />
                <translate x="0.5" y="-1" z="0" />
        </transformation>

        <transformation id="poolTransform">
            <rotate axis="x" angle="-90" />
            <scale x="9" y="3.25" z="1" />
            <translate x="1" y="-2.7" z="0.1" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>

        <primitive id="demoTriangle">
            <triangle x1="0" y1="0" z1="0"
                      x2="1" y2="0" z2="0"
                      x3="0" y3="1" z3="0"/>
        </primitive>

        <primitive id="demoCylinder">
            <cylinder base="1.0" top="1.0" height="3.0" slices="30" stacks="30" />
        </primitive>

        <primitive id="demoTorus">
            <torus inner="0.6" outer="1.4" slices="20" loops="300" />
        </primitive>

        <primitive id="demoSphere">
            <sphere radius="1.0" slices="15" stacks="15" />
        </primitive>

    </primitives>

    <components>
        <component id="grass">
            <transformation>
                <transformationref id="grassTransform" />
            </transformation>
            <texture id="none"/>
            <materials>
                <material id="grass" />
            </materials>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <component id="pool">
            <transformation>
                <transformationref id="poolTransform" />
            </transformation>
            <texture id="none"/>
            <materials>
                <material id="water" />
            </materials>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

